<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cordys.crm.system.mapper.ExtModuleFieldMapper">

    <delete id="deleteByIds" parameterType="java.lang.String">
        delete from sys_module_field where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deletePropByIds" parameterType="java.lang.String">
        delete from sys_module_field_blob where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getSourceOptionsByIds" resultType="cn.cordys.common.dto.OptionDTO">
        select id, name from ${tableName} where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
          #{id}
        </foreach>
    </select>

    <select id="resolveIdsByName" resultType="java.lang.String">
        select id from ${tableName} where name in
        <foreach collection="names" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>
    </select>

    <select id="getSourceOptionsByName" resultType="cn.cordys.common.dto.OptionDTO">
        select id, name from ${tableName} where organization_id = #{orgId}
        <if test="keyword != null and keyword != ''">
            and name like concat('%', #{keyword},'%')
        </if>
    </select>


    <select id="getModuleField" resultType="cn.cordys.crm.system.domain.ModuleField">
        SELECT
        field.id,
        field.form_id,
        field.internal_key,
        field.`name`,
        field.type
        FROM
        sys_module_field field
        INNER JOIN sys_module_form form on field.form_id = form.id
        where form.organization_id = #{orgId}
        and form.form_key in
        <foreach collection="formKeys" item="formKey" open="(" separator="," close=")">
            #{formKey}
        </foreach>
    </select>
</mapper>