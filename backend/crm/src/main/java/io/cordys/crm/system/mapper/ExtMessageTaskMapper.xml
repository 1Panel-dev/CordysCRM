<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.cordys.crm.system.mapper.ExtMessageTaskMapper">

 <select id="getEnableMessageTaskByReceiveTypeAndTaskType" resultType="io.cordys.crm.system.domain.MessageTask">
    select * from sys_message_task where organization_id = #{organizationId} and task_type = #{module} and enable = 1 
    <if test="receiveType != null">
        and receive_type = #{receiveType}
    </if>
 </select>

 <select id="getMessageTaskByReceiveTypeAndTaskType" resultType="io.cordys.crm.system.domain.MessageTask">
    select * from sys_message_task where organization_id = #{organizationId} and task_type = #{module}
    <if test="receiveType != null">
        and receive_type = #{receiveType}
    </if>
 </select>

    <select id="getMessageTaskList" resultType="io.cordys.crm.system.domain.MessageTask">
        select * from sys_message_task where organization_id = #{organizationId};
    </select>

</mapper> 