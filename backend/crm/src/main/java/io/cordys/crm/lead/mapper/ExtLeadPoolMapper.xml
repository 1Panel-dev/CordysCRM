<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.cordys.crm.lead.mapper.ExtLeadPoolMapper">
    <select id="list" resultType="io.cordys.crm.lead.dto.LeadPoolDTO" parameterType="io.cordys.crm.lead.dto.request.LeadPoolPageRequest">
        select * from lead_pool
        where organization_id = #{request.organizationId}
        <include refid="filter"/>
        order by create_time desc
    </select>

    <sql id="filter">
        <if test="request.filter != null and request.filter.size() > 0">
            <foreach collection="request.filter.entrySet()" index="key" item="values">
                <if test="values != null and values.size() > 0">
                    <choose>
                        <!-- 自动回收 -->
                        <when test="key == 'recycled'">
                            and lead_pool.lead_pool in
                            <include refid="filterInWrapper"/>
                        </when>
                        <!-- 状态 -->
                        <when test="key == 'status'">
                            and lead_pool.enable in
                            <include refid="filterInWrapper"/>
                        </when>
                    </choose>
                </if>
            </foreach>
        </if>
    </sql>

    <sql id="filterInWrapper">
        <foreach collection="values" item="value" separator="," open="(" close=")">
            #{value}
        </foreach>
    </sql>
</mapper>