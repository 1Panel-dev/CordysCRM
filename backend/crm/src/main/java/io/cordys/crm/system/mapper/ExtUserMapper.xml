<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.cordys.crm.system.mapper.ExtUserMapper">

    <select id="selectById" resultType="io.cordys.security.UserDTO">
        SELECT *
        FROM sys_user
                 LEFT JOIN sys_user_extend ON sys_user.id = sys_user_extend.id
        WHERE sys_user.id = #{id}
    </select>

    <select id="selectUserOptionByIds" resultType="io.cordys.common.dto.OptionDTO">
        SELECT id, name
        FROM sys_user
        WHERE id IN
        <foreach collection="list" item="id" index="index"
                 open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <select id="getUserRole" resultType="io.cordys.crm.system.dto.convert.UserRoleConvert">
        SELECT sr.id, sr.name, sur.user_id
        FROM sys_role sr
        inner join sys_user_role sur on sr.id = sur.role_id
        WHERE sur.user_id IN
        <foreach collection="userIds" item="userId" index="index"
                 open="(" close=")" separator=",">
            #{userId}
        </foreach>
        and sr.organization_id = #{orgId}
    </select>
</mapper>